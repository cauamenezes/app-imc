<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/activity_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="36dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/bmi"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IMC"
                android:gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Seu peso em Kg:"
                android:background="@drawable/activity_edit_text"
                android:padding="16dp"
                android:layout_marginTop="32dp"
                android:drawableStart="@drawable/touch"
                android:drawablePadding="16dp"
                android:drawableTint="@color/white"
                android:textColorHint="@color/white"
                android:textSize="24sp"

                android:inputType="numberDecimal"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sua altura em metros:"
                android:background="@drawable/activity_edit_text"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/carinha"
                android:drawablePadding="16dp"
                android:drawableTint="@color/white"
                android:textColorHint="@color/white"
                android:textSize="24sp"
                android:inputType="numberDecimal"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calcular"
                android:background="@drawable/activity_button"
                android:layout_marginTop="25dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="0.0"
                android:gravity="center"
                android:textSize="48sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:background="@drawable/resultado_background"
                android:layout_marginTop="32dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peso ideal"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>


